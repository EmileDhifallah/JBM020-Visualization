#:kivy 1.10.0

<MainScreen>:
    # ~~~~~~~~ BASIC SHAPES OF THE GUI ~~~~~~~~ #
    canvas.before:
        Rectangle:
            pos:100,100
            size:root.width,root.height

        # OPTIONS BAR BACKGROUND
        Color:
            rgba: 0.95,0.95,0.95,0.9
        Rectangle:
            pos: 0,0
            size: 250,root.height
            source: "Rainbow Gradient.png"
        Rectangle:
            pos: 0,0
            size: 250,root.height

        # TIME SHIFT BAR BACKGROUND
        Color:
            rgba: 0.9,0.9,0.9,1
        Rectangle:
            pos: 0,0
            size: root.width,40

        # BORDER LINE OF OPTIONS-BAR
        Color:
            rgba: 0.7,0.7,0.7,1
        Line:
            points: 250,0,250,root.height
            width: 1

        # BORDER LINE OF TIME-SHIFT-BAR
        Color:
            rgba: 0.7,0.7,0.7,1
        Line:
            points: 0,41,root.width,41
            width: 1

        # BORDER LINE OF MENU
        Color:
            rgba: 0.7,0.7,0.7,1
        Line:
            points: 0,root.height-20.5, root.width,root.height-20.5
            width: 1

        # BORDER LINE OF PLOT-BAR
        Color:
            rgba: 0.7,0.7,0.7,1
        Line:
            points: 250.5,root.height-131, root.width,root.height-131
            width: 1

        # MENU BACKGROUND
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: 0,root.height-20
            size: root.width,20

        # TAB BAR BACKGROUND
        Color:
            rgba: 0.9,0.9,0.9,0.7
        Rectangle:
            pos: 250.5,root.height-50
            size: root.width,29
            source: "gray-gradient.png"
        Rectangle:
            pos: 250.5,root.height-50
            size: root.width,29

        # PLOT BAR BACKGROUND
        Color:
            rgba: 0.95,0.95,0.95,1
        Rectangle:
            pos: 250.5,root.height-131
            size: root.width,79

        # BORDER LINE OF TAB-BAR
        Color:
            rgba: 0.7,0.7,0.7,1
        Line:
            points: 0,root.height-51, root.width,root.height-51
            width: 1

    Label:
        id: drop_information
        text: "[b]Drop your file anywhere\nand start exploring![/b]"
        markup: True

        pos: root.width/8+25,0
        halign: "center"

        font_size: 25
        color: 0.1,0.1,0.1,1

    # GRAPH OPTIONS TEXT
    Label:
        # BASE INFORMATION
        id: graph_options
        text: "[b]Graph Options[/b]"
        markup: True

        # SIZE INFORMATION
        pos: -root.width/2+41,root.height/2-61
        font_size: 11

        # COLOR INFORMATION
        color: 0.1,0.1,0.1,1

    # NEW TAB BUTTON
    Button:
        # BASE INFORMATION
        id: new_tab
        text: "+"

        # SIZE INFORMATION
        pos: root.width-30, root.height-50
        size: 30,29
        size_hint: None, None
        font_size: 25

        # COLOR INFORMATION
        color: 0.5,0.5,0.5,1
        background_normal: ''
        background_color: 0,0,0,0
        background_down: ""

        # EVENT ACTION
        on_press: self.background_color = (0.7,0.7,0.7,1)
        on_release: self.background_color = (0,0,0,0)

    # PLAY PAUSE BUTTON
    ImageButton:
        id: play
        source:'Play Button Light.png'
        text: "Text"
        size_hint: None, None
        size: 50,70
        pos: 90,-15
        on_press:
            print("Play")
            self.source = "Pause Button Light.png"

    # # PLAY PAUSE BUTTON
    # ImageButton:
    #     id: heatmap_symbol
    #     source:'heatmap_symbol.png'
    #     size_hint: None, None
    #     size: 60,65
    #     pos: 280,root.height-123
    #
    # # PLAY PAUSE BUTTON
    # ImageButton:
    #     id: heatmap_symbol
    #     source:'nodelink_symbol.png'
    #     size_hint: None, None
    #     size: 60,65
    #     pos: 365,root.height-123


    # Slider:
    #     pos: 275,-27.5
    #     size_hint: None, None
    #     width: root.width - 300
    #     color: 1,1,1,1

    # ~~~~~~~~ MENU BAR ~~~~~~~~ #
    StackLayout:
        # FILE BUTTON
        Button:
            # BASE INFORMATION
            id: file
            text: "File"
            halign: "left"

            # SIZE INFORMATION
            size: 35,20 # SIZE
            size_hint: None, None # IGNORE AUTO
            font_size: 11.5

            # COLOR INFORMATION
            color: 0,0,0,1
            background_normal: ''
            background_color: 1,1,1,1
            background_down: ""

            # EVENT ACTION
            on_press: self.background_color = (0.95,0.95,0.95,1)
            on_release:
                self.background_color = (1,1,1,1)
                app.reset_drop()

        # EDIT BUTTON
        Button:
            # BASE INFORMATION
            id: edit
            text: "Edit"
            halign: "left"

            # SIZE INFORMATION
            size: 35,20 # SIZE
            size_hint: None, None # IGNORE AUTO
            font_size: 11

            # COLOR INFORMATION
            color: 0,0,0,1
            background_normal: ''
            background_color: 1,1,1,1
            background_down: ""

            # EVENT ACTION
            on_press: self.background_color = (0.95,0.95,0.95,1)
            on_release: self.background_color = (1,1,1,1)

        # PANELS BUTTON
        Button:
            # BASE INFORMATION
            id: panels
            text: "Panels"
            halign: "left"

            # SIZE INFORMATION
            size: 45,20 # SIZE
            size_hint: None, None # IGNORE AUTO
            font_size: 11

            # COLOR INFORMATION
            color: 0,0,0,1
            background_normal: ''
            background_color: 1,1,1,1
            background_down: ""

            # EVENT ACTION
            on_press: self.background_color = (0.95,0.95,0.95,1)
            on_release: self.background_color = (1,1,1,1)

        # OPTIONS BUTTON
        Button:
            # BASE INFORMATION
            id: options
            text: "Options"
            halign: "left"

            # SIZE INFORMATION
            size: 55,20 # SIZE
            size_hint: None, None # IGNORE AUTO
            font_size: 11

            # COLOR INFORMATION
            color: 0,0,0,1
            background_normal: ''
            background_color: 1,1,1,1
            background_down: ""

            # EVENT ACTION
            on_press: self.background_color = (0.95,0.95,0.95,1)
            on_release: self.background_color = (1,1,1,1)
